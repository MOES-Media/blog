---
export interface Props {
  title?: string;
  lang?: string;
}

const { title, lang = "text" } = Astro.props;
---

<div class="code-block-wrapper">
  {title && (
    <div class="code-block-title">
      <span class="filename">{title}</span>
    </div>
  )}
  <pre class={`language-${lang}`}><code class={`language-${lang}`}><slot /></code></pre>
</div>

<link href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/themes/prism.min.css" rel="stylesheet" />
<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-core.min.js"></script>
<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/plugins/autoloader/prism-autoloader.min.js"></script>

<style>
  .code-block-wrapper {
    margin: 1.5em 0;
    border-radius: 8px;
    overflow: hidden;
    border: 1px solid rgb(var(--gray-light));
  }
  
  .code-block-title {
    background: rgb(var(--gray-light));
    padding: 0.5em 1em;
    font-size: 0.875em;
    font-family: 'Courier New', monospace;
    border-bottom: 1px solid rgb(var(--gray-200));
  }
  
  .filename {
    color: rgb(var(--gray-dark));
    font-weight: 500;
  }
  
  pre {
    margin: 0 !important;
    padding: 1em !important;
    background: rgb(var(--gray-50)) !important;
    overflow-x: auto;
  }
  
  code {
    font-family: 'Courier New', monospace;
    font-size: 0.875em;
  }
</style>